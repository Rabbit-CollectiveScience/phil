{
  "name": "saikum-back-end",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:all": "jest --coverage tests/unit tests/integration tests/e2e",
    "test:coverage:api": "jest --coverage --collectCoverageFrom='app/api/**/*.ts' --collectCoverageFrom='!app/**/*.test.ts'",
    "seed": "NODE_OPTIONS='--openssl-legacy-provider' dotenv -e .env.local -- tsx scripts/seed-database.ts"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.17.3",
    "@google-cloud/vision": "^5.3.4",
    "@types/uuid": "^10.0.0",
    "mongodb": "^7.0.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "jest": "^29.7.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "forceExit": true,
    "detectOpenHandles": true,
    "roots": [
      "<rootDir>/src",
      "<rootDir>/app",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(uuid)/)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "app/api/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!app/**/*.test.ts"
    ]
  }
}
